    "test_vectors": [
      {
        "test_id": "HM_SMOKE_001",
        "test_name": "Subsystem Initialization",
        "description": "Verify Health Monitor can initialize independently",
        "test_method": "initialize_health_monitor",
        "input_parameters": {
          "monitoring_targets": ["1-1", "2-1", "2-2", "3-1", "4-1", "5-1", "6-1", "Bus-1"],
          "status_levels": ["OK", "ERROR", "FAILURE"]
        },
        "expected_result": {
          "status": "SUCCESS",
          "health_monitor_initialized": true,
          "monitoring_targets_registered": true,
          "status_levels_configured": true
        },
        "timeout_seconds": 3,
        "retry_count": 3,
        "critical": true
      },
      {
        "test_id": "HM_SMOKE_002",
        "test_name": "System Status Monitoring",
        "description": "Test system status monitoring functionality",
        "test_method": "monitor_system_status",
        "input_parameters": {
          "monitoring_data": {
            "target_system": "1-1",
            "status_check": "active",
            "expected_status": "OK"
          }
        },
        "expected_result": {
          "status": "SUCCESS",
          "system_status_monitored": true,
          "status_detected": true,
          "status_accurate": true,
          "monitoring_logged": true
        },
        "timeout_seconds": 5,
        "retry_count": 2,
        "critical": true
      },
      {
        "test_id": "HM_SMOKE_003",
        "test_name": "Health Status Display",
        "description": "Test health status display functionality",
        "test_method": "display_health_status",
        "input_parameters": {
          "display_data": {
            "systems_to_display": ["1-1", "2-1", "2-2"],
            "color_coding": true,
            "auto_refresh": true
          }
        },
        "expected_result": {
          "status": "SUCCESS",
          "health_status_displayed": true,
          "color_coding_applied": true,
          "auto_refresh_working": true,
          "display_accurate": true
        },
        "timeout_seconds": 3,
        "retry_count": 2,
        "critical": true
      },
      {
        "test_id": "HM_SMOKE_004",
        "test_name": "Alert System",
        "description": "Test health alert system functionality",
        "test_method": "test_alert_system",
        "input_parameters": {
          "alert_data": {
            "alert_conditions": ["ERROR", "FAILURE"],
            "alert_thresholds": {"response_time": 5000, "memory_usage": 80},
            "notification_methods": ["visual", "log"]
