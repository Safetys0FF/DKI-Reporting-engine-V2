        "expected_result": {
          "status": "SUCCESS",
          "evidence_display_interface_initialized": true,
          "display_modes_configured": true,
          "media_types_supported": true,
          "display_quality_set": true
        },
        "timeout_seconds": 5,
        "retry_count": 3,
        "critical": true
      },
      {
