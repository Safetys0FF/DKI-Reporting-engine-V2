        "test_method": "export_multiple_formats",
        "input_parameters": {
          "export_formats": [
            {
              "format": "PDF",
              "options": {
                "include_cover": true,
                "include_toc": true,
                "watermark": "DRAFT"
              }
            },
            {
              "format": "DOCX",
              "options": {
                "include_cover": true,
                "include_toc": true,
                "editable": true
              }
            },
            {
              "format": "HTML",
              "options": {
                "include_cover": true,
                "include_toc": true,
                "interactive": true
              }
