        "input_parameters": {
          "complex_report_data": {
            "case_id": "MD_COMPLEX_TEST_001",
            "report_sections": [
              {
                "section_id": "executive_summary",
                "content": "Comprehensive executive summary with multiple paragraphs and key findings",
                "status": "complete",
                "word_count": 500
              },
              {
                "section_id": "evidence_analysis",
                "content": "Detailed evidence analysis with technical specifications and findings",
                "status": "complete",
                "word_count": 2000,
                "evidence_references": ["EVIDENCE_001", "EVIDENCE_002", "EVIDENCE_003"]
              },
              {
                "section_id": "methodology",
                "content": "Technical methodology section with procedures and protocols",
                "status": "complete",
                "word_count": 1500
              },
              {
                "section_id": "conclusions",
                "content": "Detailed conclusions with recommendations and next steps",
                "status": "complete",
                "word_count": 800
              }
            ],
            "metadata": {
              "author": "test_analyst",
              "creation_date": "2025-10-05T22:00:00Z",
              "version": "1.0",
              "classification": "CONFIDENTIAL"
            }
          }
        },
        "expected_result": {
          "status": "SUCCESS",
          "report_generated": true,
          "all_sections_processed": true,
          "word_count_accurate": true,
          "formatting_correct": true,
          "metadata_complete": true
