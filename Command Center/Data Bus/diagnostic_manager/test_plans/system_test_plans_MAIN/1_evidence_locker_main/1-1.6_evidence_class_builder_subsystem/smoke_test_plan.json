{
  "test_plan": {
    "system_name": "Evidence Class Builder Subsystem",
    "system_address": "1-1.6",
    "parent_system": "Evidence Locker (1-1)",
    "test_type": "smoke_test",
    "version": "1.0",
    "created": "2025-10-05",
    "description": "Basic functionality validation for Evidence Class Builder subsystem",
    "test_data_location": "./test_data/",
    "expected_results_location": "./expected_results/",
    "test_vectors": [
      {
        "test_id": "ECB_SMOKE_001",
        "test_name": "Subsystem Initialization",
        "description": "Verify Evidence Class Builder can initialize independently",
        "test_method": "initialize_evidence_class_builder",
        "input_parameters": {
          "builder_mode": "standard",
          "class_templates": ["document", "media", "executable", "archive"]
        },
        "expected_result": {
          "status": "SUCCESS",
          "class_builder_initialized": true,
          "builder_mode_active": true,
          "class_templates_loaded": true
        },
        "timeout_seconds": 5,
        "retry_count": 3,
        "critical": true
      },
      {
        "test_id": "ECB_SMOKE_002",
        "test_name": "Evidence Class Creation",
        "description": "Test creating evidence classes",
        "test_method": "create_evidence_class",
        "input_parameters": {
          "class_data": {
            "class_name": "test_document_class",
            "class_type": "document",
            "attributes": ["file_type", "file_size", "creation_date", "author"],
            "validation_rules": ["size_check", "type_check", "metadata_check"]
          }
        },
        "expected_result": {
          "status": "SUCCESS",
          "class_created": true,
          "class_attributes_set": true,
          "validation_rules_applied": true,
          "class_registered": true
        },
        "timeout_seconds": 5,
        "retry_count": 2,
        "critical": true
      },
      {
        "test_id": "ECB_SMOKE_003",
        "test_name": "Class Validation",
        "description": "Test evidence class validation",
        "test_method": "validate_evidence_class",
        "input_parameters": {
          "validation_data": {
            "class_name": "test_document_class",
            "evidence_sample": {
              "file_type": "PDF",
              "file_size": 1024,
              "creation_date": "2025-10-05",
              "author": "test_user"
            }
          }
        },
        "expected_result": {
          "status": "SUCCESS",
          "class_validated": true,
          "validation_rules_passed": true,
          "evidence_classified": true,
          "classification_accurate": true
        },
        "timeout_seconds": 5,
        "retry_count": 2,
        "critical": true
      },
      {
        "test_id": "ECB_SMOKE_004",
        "test_name": "Class Template Management",
        "description": "Test class template management",
        "test_method": "manage_class_templates",
        "input_parameters": {
          "template_operation": {
            "operation": "create_template",
            "template_name": "standard_document_template",
            "template_type": "document",
            "template_attributes": ["file_type", "file_size", "metadata"]
          }
        },
        "expected_result": {
          "status": "SUCCESS",
          "template_created": true,
          "template_registered": true,
          "template_attributes_set": true,
          "template_reusable": true
        },
        "timeout_seconds": 3,
        "retry_count": 2,
        "critical": false
      }
    ],
    "performance_metrics": {
      "initialization_time_max_ms": 5000,
      "class_creation_time_max_ms": 5000,
      "class_validation_time_max_ms": 5000,
      "template_management_time_max_ms": 3000,
      "memory_usage_max_mb": 75,
      "cpu_usage_max_percent": 15
    },
    "test_environment": {
      "required_files": [],
      "required_directories": [
        "./test_data/",
        "./expected_results/"
      ]
    }
  }
}
