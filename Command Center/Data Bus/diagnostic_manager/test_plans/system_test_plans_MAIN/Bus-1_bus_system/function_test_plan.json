            },
            {
              "radio_code": "10-10",
              "expected_response": "transmission_complete"
            }
          ]
        },
        "expected_result": {
          "status": "SUCCESS",
          "all_radio_codes_working": true,
          "response_accuracy": ">=0.9",
          "protocol_compliance": true
        },
        "timeout_seconds": 30,
        "retry_count": 2,
        "critical": true
