        "test_method": "route_signal_batch",
        "input_parameters": {
          "signal_batch": [
            {
              "signal_name": "evidence_processing",
              "source": "1-1",
              "target": "2-2",
              "payload": {"evidence_id": "TEST_001"}
            },
            {
              "signal_name": "section_validation",
              "source": "2-2", 
              "target": "2-1",
              "payload": {"section_id": "TEST_001"}
            },
            {
              "signal_name": "report_generation",
              "source": "3-1",
              "target": "Bus-1",
              "payload": {"report_id": "TEST_001"}
            }
          ],
          "concurrent_signals": 10,
          "routing_duration": 30
        },
        "expected_result": {
          "status": "SUCCESS",
          "all_signals_routed": true,
          "routing_accuracy": ">=0.95",
          "no_signals_lost": true,
          "performance_within_limits": true
        },
        "timeout_seconds": 60,
        "retry_count": 2,
        "critical": true
      },
      {
        "test_id": "BUS_FUNC_002",
        "test_name": "Universal Communication Protocol",
        "description": "Test universal communication protocol with all radio codes",
        "test_method": "test_universal_communication",
        "input_parameters": {
