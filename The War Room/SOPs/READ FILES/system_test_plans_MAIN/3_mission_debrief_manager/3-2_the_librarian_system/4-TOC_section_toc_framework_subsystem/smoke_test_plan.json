{
  "test_plan": {
    "system_name": "Section TOC Framework Subsystem",
    "system_address": "4-TOC",
    "parent_system": "Analyst Deck (4-x)",
    "test_type": "smoke_test",
    "version": "1.0",
    "created": "2025-10-05",
    "description": "Basic functionality validation for Section TOC Framework (Table of Contents) subsystem",
    "test_data_location": "./test_data/",
    "expected_results_location": "./expected_results/",
    "test_vectors": [
      {
        "test_id": "STOC_SMOKE_001",
        "test_name": "Subsystem Initialization",
        "description": "Verify Section TOC Framework can initialize independently",
        "test_method": "initialize_section_toc_framework",
        "input_parameters": {
          "section_type": "table_of_contents",
          "framework_mode": "standard",
          "toc_elements": ["section_numbers", "section_titles", "page_numbers", "subsections"]
        },
        "expected_result": {
          "status": "SUCCESS",
          "section_toc_framework_initialized": true,
          "section_type_set": true,
          "framework_mode_active": true,
          "toc_elements_configured": true
        },
        "timeout_seconds": 5,
        "retry_count": 3,
        "critical": true
      },
      {
        "test_id": "STOC_SMOKE_002",
        "test_name": "TOC Generation",
        "description": "Test table of contents generation functionality",
        "test_method": "generate_table_of_contents",
        "input_parameters": {
          "generation_data": {
            "report_id": "STOC_TEST_REPORT_001",
            "sections": [
              {"number": "1", "title": "Executive Summary", "page": 1},
              {"number": "2", "title": "Investigation Planning", "page": 5},
              {"number": "3", "title": "Surveillance Operations", "page": 12},
              {"number": "4", "title": "Evidence Analysis", "page": 20}
            ],
            "toc_format": "hierarchical"
          }
        },
        "expected_result": {
          "status": "SUCCESS",
          "table_of_contents_generated": true,
          "sections_included": true,
          "page_numbers_accurate": true,
          "toc_format_applied": true
        },
        "timeout_seconds": 5,
        "retry_count": 2,
        "critical": true
      },
      {
        "test_id": "STOC_SMOKE_003",
        "test_name": "TOC Formatting",
        "description": "Test TOC formatting functionality",
        "test_method": "format_table_of_contents",
        "input_parameters": {
          "formatting_data": {
            "toc_id": "STOC_TEST_TOC_001",
            "formatting_options": {
              "font_style": "professional",
              "indentation": "hierarchical",
              "page_number_alignment": "right",
              "leader_dots": true
            }
          }
        },
        "expected_result": {
          "status": "SUCCESS",
          "toc_formatted": true,
          "font_style_applied": true,
          "indentation_correct": true,
          "page_numbers_aligned": true,
          "leader_dots_included": true
        },
        "timeout_seconds": 3,
        "retry_count": 2,
        "critical": true
      },
      {
        "test_id": "STOC_SMOKE_004",
        "test_name": "TOC Navigation",
        "description": "Test TOC navigation functionality",
        "test_method": "test_toc_navigation",
        "input_parameters": {
          "navigation_data": {
            "toc_id": "STOC_TEST_TOC_001",
            "navigation_features": ["click_to_page", "section_links", "bookmark_generation"],
            "interactive_mode": "enabled"
          }
        },
        "expected_result": {
          "status": "SUCCESS",
          "toc_navigation_tested": true,
          "click_to_page_functional": true,
          "section_links_working": true,
          "bookmarks_generated": true
        },
        "timeout_seconds": 3,
        "retry_count": 2,
        "critical": false
      }
    ],
    "performance_metrics": {
      "initialization_time_max_ms": 5000,
      "toc_generation_time_max_ms": 5000,
      "toc_formatting_time_max_ms": 3000,
      "toc_navigation_time_max_ms": 3000,
      "memory_usage_max_mb": 50,
      "cpu_usage_max_percent": 10
    },
    "test_environment": {
      "required_files": [],
      "required_directories": [
        "./test_data/",
        "./expected_results/"
      ]
    }
  }
