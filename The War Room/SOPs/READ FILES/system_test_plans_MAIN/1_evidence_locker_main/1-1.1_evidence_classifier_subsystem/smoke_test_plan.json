{
  "test_plan": {
    "system_name": "Evidence Classifier Subsystem",
    "system_address": "1-1.2",
    "parent_system": "Evidence Locker (1-1)",
    "test_type": "smoke_test",
    "version": "1.0",
    "created": "2025-10-05",
    "description": "Basic functionality validation for Evidence Classifier subsystem",
    "test_data_location": "./test_data/",
    "expected_results_location": "./expected_results/",
    "test_vectors": [
      {
        "test_id": "EC_SMOKE_001",
        "test_name": "Subsystem Initialization",
        "description": "Verify Evidence Classifier can initialize independently",
        "test_method": "initialize_evidence_classifier",
        "input_parameters": {
          "classification_models": ["document", "image", "audio", "video"],
          "confidence_threshold": 0.8
        },
        "expected_result": {
          "status": "SUCCESS",
          "classifier_initialized": true,
          "models_loaded": true,
          "confidence_threshold_set": true
        },
        "timeout_seconds": 5,
        "retry_count": 3,
        "critical": true
      },
      {
        "test_id": "EC_SMOKE_002",
        "test_name": "Document Classification",
        "description": "Test document classification functionality",
        "test_method": "classify_document",
        "input_parameters": {
          "document_data": {
            "file_path": "./test_data/sample_document.pdf",
            "file_type": "PDF",
            "expected_classification": "document"
          }
        },
        "expected_result": {
          "status": "SUCCESS",
          "document_classified": true,
          "classification_accurate": true,
          "confidence_score": ">=0.8"
        },
        "timeout_seconds": 8,
        "retry_count": 2,
        "critical": true
      },
      {
        "test_id": "EC_SMOKE_003",
        "test_name": "Image Classification",
        "description": "Test image classification functionality",
        "test_method": "classify_image",
        "input_parameters": {
          "image_data": {
            "file_path": "./test_data/sample_image.jpg",
            "file_type": "IMAGE",
            "expected_classification": "media"
          }
        },
        "expected_result": {
          "status": "SUCCESS",
          "image_classified": true,
          "classification_accurate": true,
          "confidence_score": ">=0.8"
        },
        "timeout_seconds": 8,
        "retry_count": 2,
        "critical": true
      },
      {
        "test_id": "EC_SMOKE_004",
        "test_name": "Unknown File Classification",
        "description": "Test classification of unknown file types",
        "test_method": "classify_unknown",
        "input_parameters": {
          "unknown_data": {
            "file_path": "./test_data/unknown_file.bin",
            "file_type": "UNKNOWN",
            "expected_classification": "unknown"
          }
        },
        "expected_result": {
          "status": "SUCCESS",
          "unknown_classified": true,
          "classification_appropriate": true,
          "confidence_score": ">=0.5"
        },
        "timeout_seconds": 5,
        "retry_count": 2,
        "critical": false
      }
    ],
    "performance_metrics": {
      "initialization_time_max_ms": 5000,
      "document_classification_time_max_ms": 8000,
      "image_classification_time_max_ms": 8000,
      "unknown_classification_time_max_ms": 5000,
      "memory_usage_max_mb": 150,
      "cpu_usage_max_percent": 20
    },
    "test_environment": {
      "required_files": [
        "./test_data/sample_document.pdf",
        "./test_data/sample_image.jpg",
        "./test_data/unknown_file.bin"
      ],
      "required_directories": [
        "./test_data/",
        "./expected_results/"
      ]
    }
  }
}
