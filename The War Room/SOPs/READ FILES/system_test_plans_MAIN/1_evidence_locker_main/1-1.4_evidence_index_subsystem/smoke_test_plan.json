        "test_method": "initialize_evidence_index",
        "input_parameters": {
          "standalone_mode": true,
          "index_type": "memory_based"
        },
        "expected_result": {
          "status": "SUCCESS",
          "index_initialized": true,
          "memory_allocated": true,
          "index_structure_created": true
        },
        "timeout_seconds": 3,
        "retry_count": 3,
        "critical": true
      },
      {
        "test_id": "EI_SMOKE_002",
        "test_name": "Evidence Indexing",
        "description": "Test basic evidence indexing functionality",
        "test_method": "index_evidence",
        "input_parameters": {
          "evidence_data": {
            "evidence_id": "EI_TEST_001",
            "metadata": {
              "file_type": "PDF",
              "size": 1024,
              "checksum": "test_checksum_123",
              "timestamp": "2025-10-05T22:00:00Z"
            }
          }
        },
        "expected_result": {
          "status": "SUCCESS",
          "evidence_indexed": true,
          "index_entry_created": true,
          "metadata_stored": true,
          "index_size_increased": true
        },
        "timeout_seconds": 2,
        "retry_count": 2,
        "critical": true
      },
      {
        "test_id": "EI_SMOKE_003",
        "test_name": "Evidence Retrieval",
        "description": "Test evidence retrieval from index",
        "test_method": "retrieve_evidence",
        "input_parameters": {
          "evidence_id": "EI_TEST_001"
        },
        "expected_result": {
          "status": "SUCCESS",
          "evidence_found": true,
          "metadata_retrieved": true,
          "data_integrity_maintained": true
        },
        "timeout_seconds": 2,
        "retry_count": 2,
        "critical": true
      },
      {
        "test_id": "EI_SMOKE_004",
        "test_name": "Index Search",
        "description": "Test search functionality within index",
        "test_method": "search_index",
        "input_parameters": {
          "search_criteria": {
            "file_type": "PDF",
            "date_range": "2025-10-05"
          }
        },
        "expected_result": {
          "status": "SUCCESS",
          "search_completed": true,
          "results_found": true,
